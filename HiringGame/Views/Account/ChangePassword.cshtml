@{
    ViewData["Title"] = "Change password";
}
@model ChangePasswordViewModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Change password</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Change password</li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-controller="Account" asp-action="ChangePassword" method="post">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="m-0">Change password </h5>

                            </div>
                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="EmailAddress"></label>
                                    <input asp-for="EmailAddress"  class="form-control" disabled="" placeholder="Email Address" />
                                </div>


                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>


                            </div>
                            <div class="card-footer">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input type="submit" value="Submit" class="btn btn-success" />
                                <a class="btn btn-default" asp-controller="Jobs" asp-action="Index">Cancel</a>

                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.col-md-6 -->
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>



</div>
